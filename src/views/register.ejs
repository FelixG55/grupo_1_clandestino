
<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
    <body>
        <div class="logo">
            <img class="imagen" src="/images/imagen-register.jpg" alt="logo">

        </div>
        <form action="/register" method="POST" enctype="multipart/form-data">
            <p class="container-form">
                <label for="nombre"></label>
                <input placeholder="Nombre" type="text" name="nombre" id="nombre" value="<%= locals.oldData ? oldData.nombre : null %>">
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.nombre) { %>
                 <%= errors.nombre.msg %>
                <% } %>
            </div>
            <p class="container-form">
                <label for="apellido"></label>
                <input placeholder="apellido" type="text" name="apellido" id="apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.apellido) { %>
                    <%= errors.apellido.msg %>
                   <% } %>
            </div>
            <p class="container-form">
                <label for="email"></label>
                <input placeholder="Email" type="text" name="email" id="email" value="<%= locals.oldData ? oldData.email : null %>">
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.email) { %>
                    <%= errors.email.msg %>
                   <% } %>
            </div>
            <p class="container-form">
                <label for="password"></label>
                <input placeholder="Contraseña" type="password" name="password" id="password" value="<%= locals.oldData ? oldData.password : null %>">
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.password) { %>
                    <%= errors.password.msg %>
                   <% } %>
            </div>
            <!-- <p class="container-form">       
                <label for="Confirmar Contrase単a"></label>
                <input placeholder="Confirmar Contrase単a" type="text" name="usuario">
            </p> -->
            <!-- <p class="container-form">
                <label for="Acepto los terminos y condiciones"></label>
                <input placeholder="Acepto los terminos y condiciones" type="text" name="usuario">
            </p> -->
            <p class="container-form">
                <label for="categoria">Usuario administrador</label>
                <select name="categoria" id="categoria">
                    <option value="">Elige una opción</option>
                    <option value="true" <%= locals.oldData && (oldData.categoria == 'true') ? 'selected': null %>>Si</option>
                    <option value="false"<%= locals.oldData && (oldData.categoria == 'false') ? 'selected': null %>>No</option>
                </select>
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.categoria) { %>
                    <%= errors.categoria.msg %>
                   <% } %>
            </div>
            <p class="container-form">
                <label for="userImage">Sube la imagen del producto</label>
                <input type="file" id="userImage" name="userImage">
            </p>
            <div class="error-msg">
                <% if (locals.errors && errors.userImage) { %>
                    <%= errors.userImage.msg %>
                   <% } %>
            </div>
            <div class="enviar">
                <button type="submit">Enviar</button>
            </div>
        </form>
            
    </body>
</html>